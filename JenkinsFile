pipeline {
    agent any
    
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the image containing all dependencies (Node, Python, Selenium)
                    sh 'docker build -t gaganyatri-test-app -f DockerFile .'
                }
            }
        }

        stage('Run Selenium Tests') {
            steps {
                script {
                    // Run the tests inside the container
                    sh 'docker run --rm -v $(pwd)/tests:/app/tests gaganyatri-test-app python /app/tests/E2E\ Selenium\ tests/login.py'
                }
            }
        }
    }
}