pipeline {
    agent any

    tools {
        nodejs 'node' 
    }

    stages {
        stage('Install Dependencies') {
            steps {
                bat 'npm install' 
            }
        }

        stage('Selenium Tests') {
            steps {
                script {
                    // CHANGE 1: Use 'python -m pip' instead of just 'pip'
                    // This asks the python executable to run the pip module
                    bat 'python -m pip install selenium' 
                    
                    // CHANGE 2: Ensure we use 'python' (not python3) for Windows
                    bat 'python "tests/E2E Selenium tests/login.py"'
                }
            }
        }
    }
}